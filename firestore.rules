rules_version = '2';
// FocusWrite: assignments (teacher-only), sessions (students create/update; teachers read)
// Deploy with: firebase deploy --only firestore:rules

service cloud.firestore {
  match /databases/{database}/documents {
    function teacherIdForAssignment(assignmentId) {
      return get(/databases/$(database)/documents/assignments/$(assignmentId)).data.teacherId;
    }

    function isTeacherForAssignment(assignmentId) {
      return request.auth != null
        && teacherIdForAssignment(assignmentId) == request.auth.uid;
    }

    // Assignments: only the creating teacher can read/update/delete their own
    match /assignments/{assignmentId} {
      allow read, update, delete: if request.auth != null && resource.data.teacherId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.teacherId == request.auth.uid;
    }

    // Sessions: students create/update (unauthenticated); teachers read via dashboard
    match /sessions/{sessionId} {
      allow read: if request.auth != null
        && resource.data.teacherId is string
        && resource.data.teacherId == request.auth.uid;
      allow create: if request.resource.data.assignmentId is string
        && request.resource.data.studentId is string
        && request.resource.data.teacherId is string
        && request.resource.data.teacherId == teacherIdForAssignment(request.resource.data.assignmentId)
        && request.resource.data.content is string
        && request.resource.data.wordCount is number
        && request.resource.data.strikeCount == 0
        && request.resource.data.status == 'active'
        && request.resource.data.assignmentId + '_' + request.resource.data.studentId == sessionId
        && request.resource.data.content.size() <= 50000;
      allow update: if resource.data.status == 'active'
        && request.resource.data.assignmentId == resource.data.assignmentId
        && request.resource.data.studentId == resource.data.studentId
        && request.resource.data.teacherId is string
        && (
          request.resource.data.teacherId == resource.data.teacherId
          || (
            !(resource.data.teacherId is string)
            && request.resource.data.teacherId == teacherIdForAssignment(resource.data.assignmentId)
          )
        )
        && request.resource.data.createdAt == resource.data.createdAt
        && request.resource.data.content is string
        && request.resource.data.wordCount is number
        && request.resource.data.strikeCount >= resource.data.strikeCount
        && request.resource.data.content.size() >= resource.data.content.size()
        && request.resource.data.content.size() <= 50000
        && request.resource.data.status in ['active', 'locked'];
      allow delete: if false;
    }
  }
}
